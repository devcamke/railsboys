<%= form_with(model: idea, class: 'form-horizontal', style: "margin-top: 20px;") do |form| %>
  <% if idea.errors.any? %>
   <div style="padding: 15px; margin-bottom: 20px; border: 1px solid transparent; border-radius: 4px; color: #a94442; background-color: #f2dede; border-color: #ebccd1;">
     <h4 style="margin-top: 0; margin-bottom: 0; font-size: 18px; line-height: 1.4em;"><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h4>

     <ul style="margin-top: 0; padding-left: 0;">
       <% idea.errors.each do |error| %>
         <li style="list-style: none;"><%= error.full_message %></li>
       <% end %>
     </ul>
   </div>
  <% end %>

  <div style="margin-bottom: 15px;">
   <%= form.label :name, class: 'control-label col-sm-2', style: "font-weight: bold;" %>
   <div class="col-sm-10">
     <%= form.text_field :name, class: 'form-control', style: "width: 100%; padding: .375rem .75rem; font-size: 1rem; line-height: 1.5; color: #495057; background-color: #fff; background-clip: padding-box; border: 1px solid #ced4da; border-radius: .25rem;" %>
   </div>
  </div>

  <div style="margin-bottom: 15px;">
   <%= form.label :description, class: 'control-label col-sm-2', style: "font-weight: bold;" %>
   <div class="col-sm-10">
     <%= form.text_area :description, class: 'form-control', style: "width: 100%; padding: .375rem .75rem; font-size: 1rem; line-height: 1.5; color: #495057; background-color: #fff; background-clip: padding-box; border: 1px solid #ced4da; border-radius: .25rem;" %>
   </div>
  </div>

  <div style="margin-bottom: 15px;">
   <%= form.label :picture, class: 'control-label col-sm-2', style: "font-weight: bold;" %>
   <div class="col-sm-10">
     <%= form.file_field :picture, class: 'form-control', style: "width: 100%; padding: .375rem .75rem; font-size: 1rem; line-height: 1.5; color: #495057; background-color: #fff; background-clip: padding-box; border: 1px solid #ced4da; border-radius: .25rem;" %>
   </div>
  </div>

  <div style="margin-bottom: 15px;">
   <div class="col-sm-offset-2 col-sm-10">
     <%= form.submit class: 'btn btn-primary', style: "background-color: #007bff; border-color: #007bff; color: #fff; width: 100%; padding: .375rem .75rem; font-size: 1rem; line-height: 1.5; border-radius: .25rem;" %>
   </div>
  </div>
 <% end %>
